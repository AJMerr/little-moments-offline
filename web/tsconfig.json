{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",      // use "Node" if you're on TS < 5
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"]            // <-- this is the key bit
  },
  "include": ["src"]
}
